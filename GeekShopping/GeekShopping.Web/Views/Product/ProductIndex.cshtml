@model IEnumerable<GeekShopping.Web.Models.ProductModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h3 class="text-primary">Products List</h3>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary btn-sm">
                <i class="fas fa-plus"> Create New Product</i>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <small>Name</small>
                </th>
                <th>
                    <small>Category</small>
                </th>
                <th>
                    <small>Price</small>
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <small>@item.Name</small>
                    </td>
                    <td>
                        <small>@item.CategoryName</small>
                    </td>
                    <td>
                        <small>@((@item.Price).ToString("c"))</small>
                    </td>
                    <td>
                        <a asp-action="ProductUpdate" class="btn btn-success btn-sm" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>